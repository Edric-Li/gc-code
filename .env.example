# ================================
# Docker 部署环境变量配置示例
# ================================
# 复制此文件为 .env 并填入实际值

# 数据库密码
DB_PASSWORD=your-secure-postgres-password

# 加密密钥（必需，使用 openssl rand -base64 32 生成）
ENCRYPTION_KEY=your-encryption-key-generate-using-openssl-rand-base64-32

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1h

# Azure AD 配置（必需）
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_REDIRECT_URI=http://localhost/api/auth/azure/callback

# 外部 Claude 中继服务 API（必需）
RELAY_API_BASE_URL=https://console.gccode.cn
RELAY_API_USERNAME=your-relay-username
RELAY_API_PASSWORD=your-relay-password

# Session 配置（可选，有默认值）
SESSION_TTL_SECONDS=3600
SESSION_RENEW_THRESHOLD_SECONDS=300
SESSION_MAX_CACHE_SIZE=10000
SESSION_MESSAGE_COUNT=3
SESSION_INCLUDE_SYSTEM_PROMPT=false

# 渠道测试连接配置（可选，有默认值）
DEFAULT_TEST_MODEL=claude-3-5-haiku-20241022
TEST_CONNECTION_TIMEOUT=30000
