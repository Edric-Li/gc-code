{
  "name": "gc-code-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "bash scripts/start-dev.sh",
    "dev:frontend": "pnpm --filter @gc-code/frontend dev",
    "dev:backend": "pnpm --filter @gc-code/backend start:dev",
    "dev:all": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "pnpm --filter @gc-code/frontend build",
    "build:backend": "pnpm --filter @gc-code/backend build",
    "install:all": "pnpm install",
    "kill-port": "bash scripts/kill-port.sh",
    "lint": "pnpm --filter @gc-code/frontend lint",
    "format": "pnpm --filter @gc-code/frontend format",
    "type-check": "pnpm --filter @gc-code/frontend type-check",
    "prepare": "husky install",
    "postinstall": "(cd node_modules/.pnpm/bcrypt@*/node_modules/bcrypt && npm run install) 2>/dev/null || true && cd apps/backend && pnpm prisma generate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
